
<section class="inner">
  <h2 class="section-ttl">新規会員登録</h2>

  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <table class="user_info user_form">
      <thead>
        <th></th>
        <th></th>
        <th></th>
      </thead>
      <tbody>
        <tr>
          <td>名前</td>
          <td><%= f.text_field :name, autofocus: true, :placeholder =>"京都 祇園" %></td>
        </tr>

        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :name_kana, :placeholder =>"キョウト ギオン" %></td>
        </tr>
        <tr>

          <td><%= f.label :old, "年齢" %></td>
          <td colspan="2"><%= f.text_field :old, :placeholder =>"23"%>歳</td>
        </tr>
        <tr>
          <td><%= f.label :height, "身長" %></td>
          <td colspan="2"><%= f.text_field :height, :placeholder =>"175"%>cm</td>
        </tr>
        <tr>
          <td><%= f.label :body_weight, "体重" %></td>
          <td colspan="2"><%= f.text_field :body_weight, :placeholder =>"70"%>kg</td>
        </tr>
        <tr>
          <td><%= f.label :experience, "トレーニング歴" %></td>
          <td colspan="2"><%= f.text_field :experience, :placeholder =>"1年以上"%></td>
        </tr>

         <tr>
          <td><%= f.label :email, "メールアドレス" %></td>
          <td colspan="2"><%= f.email_field :email, autocomplete: "email" %></td>
        </tr>

        <tr>
          <td><%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %></td>
          <td colspan="2"><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
          <td colspan="2"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td></td>
          <td colspan="2"><%= f.submit "新規登録", class: "btn btn-success" %></td>
        </tr>
      </tbody>
    </table>
  <% end %>

  <h2 class="section-ttl">既に登録済みの方</h2>
  <p><%= link_to "こちら", new_user_session_path, class: "underline" %>からログインしてください。</p>
</section>

<%= render "devise/shared/links" %>