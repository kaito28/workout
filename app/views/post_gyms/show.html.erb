<div>
  <p>ユーザーネーム：<%= @post_gym.user.name %></p>
  <p>today's best photo：<%= attachment_image_tag @post_gym, :image, format: 'jpeg', size: "500x500" %></p>
  <p>トレーニング場所：<%= @post_gym.workout_at %></p>
  <p>トレーニングメニュー：<%= @post_gym.workout_menu %></p>
  <p>説明：<%= @post_gym.aim %></p>
  <p>投稿日時：<%= @post_gym.created_at.strftime('%Y/%m/%d') %></p>

safe_join(@text.split("\n"),tag(:br))

<div>
<p>コメント件数：<%= @post_gym.comments.count %></p>
<% @post_gym.comments.each do |comment| %>
  <%= comment.user.name %>
  <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
  <% if comment.user == current_user %>
   <%= link_to "削除", post_gym_comment_path(comment.post_gym, comment), method: :delete %>
  <% end %>


  <% if @post_gym.liked_by?(current_user) %>
    <p>
      <%= link_to post_gym_likes_path(@post_gym), method: :delete do %>
        ♥<%= @post_gym.likes.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to post_gym_likes_path(@post_gym), method: :post do %>
        ♡<%= @post_gym.likes.count %> いいね
      <% end %>
    </p>
  <% end %>





<% end %>
</div>

<div>
<%= form_with(model:[@post_gym, @comment], local: true) do |f| %>
  <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
  <%= f.submit "送信する" %>
<% end %>
</div>





  <% if @post_gym.user == current_user %>
  <%= link_to "削除", post_gym_path(@post_gym), method: :delete %>
  <%= link_to "編集", edit_post_gym_path(@post_gym) %>
  <% end %>

</div>