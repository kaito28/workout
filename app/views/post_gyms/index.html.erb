<div class="card-list-container py-4">
<% @post_gyms.each do |post_gym| %>

<div class="card w-50 mx-auto mt-3 shadow-lg">

  <div class="card-body">
  <div class="row">
  <div class="col-12">
  <%= attachment_image_tag post_gym.user, :profile_image, :fill, 60, 60,  class:"mt-3 rounded-circle"; %>
   <%= link_to post_gym_path(post_gym.id) do %>
  <p class="text-left mt-3"><strong><%= post_gym.user.name %></strong></p>
  <% end %>
  </div>
  </div>
  </div>



<strong>today's best photo</strong>
  <p class="border border"><%= attachment_image_tag post_gym, :image, class:"card-img-top"; %></p>

 <div class="col-12">
　 <p class="card-title">
　    <strong><p class="card-title border" >トレーニング場所: </strong><%= post_gym.workout_at %></strong></p>

     <div class="d-flex flex-row bd-highlight mb-3">
        <strong><p class="col-6 p-2 bd-highlight border card-title">トレーニングメニュー：</strong><br><%= safe_join(post_gym.workout_menu.split("\n"),tag(:br)) %></p>
        <strong><p class="col-6 p-2 bd-highlight border card-title">説明： </strong><br><%= safe_join(post_gym.aim.split("\n"),tag(:br)) %></p>
     </div>
　  <span><i class="fas fa-user"></i> By <%= post_gym.user.name %> ｜ </span>
 <span><%= link_to "#{post_gym.comments.count} コメント", post_gym_path(post_gym.id), class:"text-dark" %></span>

 　　　　</div>
      </div>
    </div>
  </div>
  <% end %>
  <%= paginate @post_gyms %>
</div>
</div>

