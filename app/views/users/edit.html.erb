<div class="container mt-4">
<div calss="col-12">
<h3>プロフィール編集</h3>
</div>
</div>

<div class="container border bg-light mt-4">
<div class="col-12">
 <%= form_with model: @user, local:true do |f| %>
<div>
  <p class="text-center mt-3"><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class:"mt-3 border rounded-circle"; %></p>
   <p class="text-center">現在のProfileImage</p>
   <p class="text-center"><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></p>

  <p class="text-center mt-3">名前 :<%= f.text_field :name, autofocus: true, placeholder:"名前"%></p>
  <p class="text-center mt-4">年齢 :<%= f.text_field :old, autofocus: true, placeholder:"年齢"%></p>
  <p class="text-center mt-4">身長 :<%= f.text_field :height, autofocus: true, placeholder:"身長"%></p>
  <p class="text-center mt-4">体重：<%= f.text_field :body_weight, autofocus: true, placeholder:"体重"%></p>
  <p class="text-center mt-4 mr-4 ">トレーニング歴：<%= f.text_field :experience, autofocus: true, placeholder:"トレーニング歴", class:"mr-5"%></p>

　<p class="text-right"><%= f.submit "変更を保存", class:"btn btn-success" %></p>
</div>


<% end %>

</div>
</div>
